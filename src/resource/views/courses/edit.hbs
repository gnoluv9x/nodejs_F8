<div class="mt-4">
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input name="name" value="{{course.name}}" type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input name="description" value="{{course.description}}" type="text" class="form-control" id="description">
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input name="videoId" value="{{course.videoId}}" type="text" class="form-control" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input name="level" value="{{course.level}}" type="text" class="form-control" id="level">
        </div>
       
        <button value="{{course.name}}" type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
